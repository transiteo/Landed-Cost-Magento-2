<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="sidebar" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="summary" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="totals" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="transiteo_duty" xsi:type="array">
                                                            <item name="component" xsi:type="string">Transiteo_Taxes/js/view/cart/totals/surcharge_checkout_duty</item>
                                                            <item name="sortOrder" xsi:type="string">50</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="title" xsi:type="string" translate="true">Transiteo Duty</item>
                                                            </item>
                                                        </item>
                                                        <item name="transiteo_vat" xsi:type="array">
                                                            <item name="sortOrder" xsi:type="string">51</item>
                                                            <item name="component" xsi:type="string">Transiteo_Taxes/js/view/cart/totals/surcharge_checkout_vat</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="title" xsi:type="string" translate="true">Transiteo Vat</item>
                                                            </item>
                                                        </item>
                                                        <item name="transiteo_special_taxes" xsi:type="array">
                                                            <item name="sortOrder" xsi:type="string">52</item>
                                                            <item name="component" xsi:type="string">Transiteo_Taxes/js/view/cart/totals/surcharge_checkout_special_taxes</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="title" xsi:type="string" translate="true">Transiteo Special Taxes</item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
