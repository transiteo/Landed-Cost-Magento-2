<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Transiteo_Taxes::css/popup.css"/>
    </head>
    <body>
        <referenceContainer name="after.body.start">
            <block class="Transiteo\Taxes\Block\Modal" name="transiteo.modal" template="Transiteo_Taxes::modal.phtml" cacheable="false">
                <block class="Magento\Theme\Block\Html\Header\Logo"
                       template="Transiteo_Taxes::modal/logo.phtml"
                       name="transiteo.modal.logo"
                       as="logo"/>
            </block>
        </referenceContainer>

        <referenceContainer name="header.panel">
            <block class="Magento\Framework\View\Element\Template"
                   template="Transiteo_Taxes::button.phtml"
                   name="button.link"
                   before="-" />
        </referenceContainer>
    </body>
</page>
