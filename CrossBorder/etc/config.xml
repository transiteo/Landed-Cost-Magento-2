<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <transiteo_activation>
            <general>
                <client_id></client_id>
                <refresh_token></refresh_token>
            </general>
        </transiteo_activation>
        <currency>
            <transiteo>
                <timeout>100</timeout>
                <delay>1</delay>
            </transiteo>
        </currency>
        <transiteo_settings>
            <modal>
                <show>0</show>
                <button_color>#000000</button_color>
                <title>Welcome !</title>
                <css><![CDATA[
                    #Transiteo_CrossBorder_modal {

                    }
                ]]></css>
            </modal>
            <duties>
                <enabled_on>cart,checkout</enabled_on>
                <incoterm>dap</incoterm>
                <debug_mode>0</debug_mode>
            </duties>
        </transiteo_settings>
    </default>
</config>
