<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Transiteo_LandedCost::css/popup.css"/>
    </head>
    <body>
        <referenceContainer name="after.body.start">
            <block class="Transiteo\LandedCost\Block\Modal" name="transiteo.modal" template="Transiteo_LandedCost::modal.phtml" cacheable="true" ifconfig="transiteo_settings/modal/show">
                <block class="Magento\Theme\Block\Html\Header\Logo"
                       template="Transiteo_LandedCost::modal/logo.phtml"
                       name="transiteo.modal.logo"
                       as="logo"/>
            </block>
        </referenceContainer>

        <referenceContainer name="header.panel">
            <block class="Magento\Framework\View\Element\Template"
                   template="Transiteo_LandedCost::button.phtml"
                   name="transiteo.modal.button.link"
                   before="-"
                   cacheable="true"
                   ifconfig="transiteo_settings/modal/show"
            />
        </referenceContainer>
    </body>
</page>
